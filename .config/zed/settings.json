// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "languages": {
    "Markdown": {
      "show_edit_predictions": false
    }
  },
  "show_edit_predictions": false,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "relative_line_numbers": true,
  "theme": "Min Dark (Blurred)",
  // "experimental.theme_overrides": {
  //   "background.appearance": "blurred",
  //   // "background": "#292a2fe6",
  //   "background": "#28292EB2",
  //   "title_bar.background": "#292a2fe6",
  //   "panel.background": "#00000000",
  //   // "ghost_element.selected": "#0000000d",
  //   // "ghost_element.hover": "#00000008",
  //   "status_bar.background": "#292a2fe6",
  //   "editor.background": "#0000000d",
  //   "editor.gutter.background": "#0000000d",
  //   "editor.subheader.background": "#00000000",
  //   "editor.active_line.background": "#00000008",
  //   "border": "#292a2fb3",
  //   "border.focused": "#292a2fb3",
  //   "border.variant": "#292a2fb3",
  //   "border.disabled": "#292a2fb3",
  //   "border.selected": "#292a2fb3",
  //   "toolbar.background": "#0000000d",
  //   "tab_bar.background": "#0000000d",
  //   // "tab.active_background": "#0000001a",
  //   "tab.active_background": "#FFFFFF0C",
  //   "tab.inactive_background": "#00000000",
  //   "terminal.background": "#00000000",
  //   "scrollbar.track.background": "#00000000",
  //   "text.muted": "#ffffffb3",
  //   "ignored": "#ffffff66",
  //   "modified": "#6299f7"
  // },
  // "ui_font_family": "Zed Mono",
  "buffer_font_size": 13.0,
  "buffer_font_features": {
    // Disable ligatures:
    "calt": false
  },
  "cursor_blink": false,
  "format_on_save": "on",
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "close_position": "left"
  },
  "preview_tabs": {
    "enabled": false
  },
  "wrap_guides": [100],
  "language_overrides": {
    "TypeScript": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "JavaScript": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TSX": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "CSS": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "HTML": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Dart": {
      "tab_size": 2
    },
    "Rust": {
      "preferred_line_length": 100
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  }
}
